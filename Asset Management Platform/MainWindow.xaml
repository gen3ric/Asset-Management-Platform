<Window x:Class="Asset_Management_Platform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:Asset_Management_Platform.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" 
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Window.Resources>
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="Background" Value="DarkSlateGray"/>
        </Style>
        <!--<Style TargetType="{x:Type Control}" x:Key="baseStyle">
            <Setter Property="FontFamily" Value="Comic Sans"/>
        </Style>
        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource baseStyle}"/>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Comic Sans"/>
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource baseStyle}">
            
        </Style>-->
        <Style x:Key="ScreenerStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="30"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="175"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto" MinHeight="20"></RowDefinition>
                <RowDefinition Height="Auto" MinHeight="20"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontSize" Value="13"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontSize" Value="13"/>
                </Style>
            </Grid.Resources>
            <TextBlock Grid.Row="0" 
                       Grid.Column="0" 
                       HorizontalAlignment="Left" 
                       Text="Stock Screener"
                       FontSize="16"
                       FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Bottom">
                <TextBlock Text="Enter Ticker:" Foreground="Red"/>
                <TextBox Text="{Binding StockScreenerTicker, Mode=OneWayToSource}" 
                             MinWidth="45" 
                             Background="Black" 
                             CaretBrush="Red"
                             BorderBrush="Black"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <TextBlock Text="{Binding ScreenerStock.Description, Mode=OneWay}"
 />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" >
                <TextBlock />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" >
                <TextBlock Text="Last: " Foreground="Red"/>
                <TextBlock Text="{Binding ScreenerStock.LastPrice}"
                           Width="Auto"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" >
                <TextBlock Text="Yield:  " Foreground="Red"/>
                <TextBlock Text="{Binding ScreenerStock.Yield}"
                           Width="Auto"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0" >
                <TextBlock />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" >
                <TextBlock />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="2" >
                <TextBlock />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="0" >
                <TextBlock />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="1" >
                <TextBlock />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="2" >
                <TextBlock />
            </StackPanel>


        </Grid>
        
        
        <Grid HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Background="Azure">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="All Assets" Margin="5" Grid.Column="0"/>
            <Button Content="Equities" Margin="5" Grid.Column="1"/>
            <Button Content="Fixed Income" Margin="5" Grid.Column="2"/>
            <Button Content="Funds and ETFs" Margin="5" Grid.Column="3"/>
        </Grid>
        <!-- When you have to make a DataGrid that groups objects by type: http://wpftutorial.net/DataGrid.html-->
        <DataGrid ItemsSource="{Binding StockList, 
                                NotifyOnSourceUpdated=True, 
                                UpdateSourceTrigger=PropertyChanged}" 
                  Grid.Row="2"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  HorizontalAlignment="Center" 
                  Margin="0,3,0,3" 
                  AlternatingRowBackground="AliceBlue" 
                  AutoGenerateColumns="False" 
                  CanUserDeleteRows="False"
                  VerticalScrollBarVisibility="Visible"
                  CanUserAddRows="False"  
                  ColumnWidth="Auto"
                  SelectedItem="{Binding SelectedDisplayStock, Mode=OneWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto" Header="Ticker"  Binding="{Binding Ticker}"  TextOptions.TextFormattingMode="Display"/>
                <DataGridTextColumn Width="Auto" Header="Description" Binding="{Binding Description}"/>
                <DataGridTextColumn Width="Auto" Header="Shares" Binding="{Binding Shares}"/>
                <DataGridTextColumn Width="*" Header="Price" Binding="{Binding Price}"/>
                <DataGridTextColumn Width="Auto" Header="Market Value" Binding="{Binding MarketValue}"/>
                <DataGridTextColumn Width="*" Header="Yield" Binding="{Binding Yield}"/>
                <DataGridTextColumn Width="*" Header="P/E Ratio" Binding="{Binding PeRatio}"/>
                <DataGridTextColumn Width="*" Header="Ask" Binding="{Binding Ask}"/>
                <DataGridTextColumn Width="*" Header="Ask Size" Binding="{Binding AskSize}"/>
                <DataGridTextColumn Width="*" Header="Bid" Binding="{Binding Bid}"/>
                <DataGridTextColumn Width="*" Header="Bid Size" Binding="{Binding BidSize}"/>
                <DataGridTextColumn Width="*" Header="Volume" Binding="{Binding Volume}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="3" Grid.Column="1"  Background="Azure">
            <Grid.Style>
                <Style/>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
                <TextBlock Text="Trade Type:" Margin="3" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding TradeTypeStrings}"  SelectedItem="{Binding SelectedTradeType}" Height="Auto" Width="100"  Margin="3" Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Center" VerticalAlignment="Center"/>

                <TextBlock Text="Trade Terms:" Margin="40,3,3,3" Grid.Column="2" Grid.Row="0"  VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding TradeTermStrings}"  SelectedItem="{Binding SelectedTermType}" Height="Auto" Width="100"  Margin="3" Grid.Row="0" Grid.Column="3" VerticalContentAlignment="Center" VerticalAlignment="Center"/>

                <TextBlock Text="Duration:" Margin="3" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding TradeDurationStrings}"  SelectedItem="{Binding SelectedDurationType}" Height="Auto" Width="100"  Margin="3" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" VerticalAlignment="Center"/>

                <TextBlock Text="Limit/Stop:" Margin="40,3,3,3" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
                <TextBox Text="{Binding LimitPrice, Mode=TwoWay}" Grid.Row="1" Grid.Column="3" Width="100" Height="20" Margin="3"  VerticalAlignment="Center" IsEnabled="{Binding LimitBoxActive}"/>

                <TextBlock Text="Ticker:" Margin="3" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"/>
                <TextBox Text="{Binding OrderTickerText, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Width="100" Height="20" Margin="3" VerticalAlignment="Center" />
            
                <TextBlock Text="Shares:" Margin="40,3,3,3" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
                <TextBox Text="{Binding OrderShareQuantity, Mode=TwoWay}" Grid.Row="2" Grid.Column="3" Width="100" Height="20" Margin="3"  VerticalAlignment="Center"/>
                
            
            
                <TextBlock Text="Mkt Price:" Margin="3" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding PreviewPrice, Mode=OneWay}" Width="100" Height="20" Margin="3" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" IsManipulationEnabled="False"/>

                
                
            <Button Content="Preview Order" Margin="3" Command="{Binding PreviewOrder}" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
            <Button Content="Execute" Command="{Binding ExecuteOrder}" Margin="40,3,3,3" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Center" IsEnabled="{Binding ExecuteButtonEnabled}"/>
        </Grid>
        <Border Grid.Column="2" 
                Grid.Row="3" 
                CornerRadius="10,10,10,10" 
                Background="Aqua">
            <Grid Background="Azure">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBox Text="{Binding PreviewDescription, Mode=OneWay}" Grid.Row="0" Grid.Column="1" Width="100" Height="20" Margin="3"  VerticalAlignment="Center"/>
                <TextBlock Text="Description:" Margin="3,3,3,3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Center" />

                <TextBox Text="{Binding PreviewAsk, Mode=OneWay}" Grid.Row="1" Grid.Column="3" Width="100" Height="20" Margin="3"  VerticalAlignment="Center"/>
                <TextBlock Text="Ask:" Margin="40,3,3,3" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" />
                
                <TextBox Text="{Binding PreviewBid, Mode=OneWay}" Grid.Row="1" Grid.Column="1" Width="100" Height="20" Margin="3"  VerticalAlignment="Center"/>
                <TextBlock Text="Bid:" Margin="3,3,3,3" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
                
                <TextBox Text="{Binding PreviewAskSize, Mode=OneWay}" Grid.Row="2" Grid.Column="3" Width="100" Height="20" Margin="3"  VerticalAlignment="Center"/>
                <TextBlock Text="Ask Size:" Margin="40,3,3,3" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" />
                
                <TextBox Text="{Binding PreviewBidSize, Mode=OneWay}" Grid.Row="2" Grid.Column="1" Width="100" Height="20" Margin="3"  VerticalAlignment="Center"/>
                <TextBlock Text="Bid Size:" Margin="3,3,3,3" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
                
                <TextBox Text="{Binding PreviewValue, Mode=OneWay}" Grid.Row="3" Grid.Column="1" Width="100" Height="20" Margin="3"  VerticalAlignment="Center"/>
                <TextBlock Text="Order Value:" Margin="3,3,3,3" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />

                <TextBox Text="{Binding AlertBoxMessage, Mode=OneWay}" 
                         Name="AlertBox"  
                         Background="Azure" 
                         Grid.Row="4" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="4" 
                         VerticalContentAlignment="Center" 
                         HorizontalContentAlignment="Center" 
                         FontSize="20" 
                         Foreground="Red"
                         BorderBrush="Azure">
                    <TextBox.Style>
                        <Style>
                            <Style.Triggers>
                            
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>
        </Border>
    </Grid>
</Window>
